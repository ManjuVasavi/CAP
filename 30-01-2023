//Predecessor and successor for a node in inorder traversal

class GfG
{
    public static void findPreSuc(Node root, Res p, Res s, int key)
    {
       // add your code here
    //   p = null;
    //   s = null;
       if(root==null){
           return;
       }
       while(root!=null){
       //equal case
           if(root.data==key){
               if(root.left!=null){
                   p.pre=root.left;
                   while(p.pre.right!=null){
                       p.pre=p.pre.right;
                   }
               }
               if(root.right!=null){
                   s.succ=root.right;
                   while(s.succ.left!=null){
                       s.succ=s.succ.left;
                   }
               }
               return;
           }
           //Key is greater than current root value
           else if(key>root.data){
               p.pre=root;
               root=root.right;
           }
           //key value less than current root value 
           else{
               s.succ=root;
               root=root.left;
           }
       }
    //   System.out.print(p.pre+" ");
    //   System.out.print(s.suc);
    }
}
