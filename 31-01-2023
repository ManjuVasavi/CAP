//Increasing order search tree

class Solution {
    TreeNode t = null;
    TreeNode curr = null;
    public void check(TreeNode root){
        if(root==null){
            return;
        }
        check(root.left);
        if(t==null){
            t=root;
            curr=root;
        }
        else{
            curr.right=root;
            curr=curr.right;
            curr.left=null;
        }
        check(root.right);
    }
    public TreeNode increasingBST(TreeNode root) {
        check(root);
        return t;
    }
}

//Find largest value in each tree row

class Solution {
    public List<Integer> largestValues(TreeNode root) {
        List<Integer> l = new ArrayList<>();
        Queue<TreeNode> q = new LinkedList<>();
        if(root==null){
            return l;
        }
        q.add(root);
        while(!q.isEmpty()){
            int size = q.size();
            int max=Integer.MIN_VALUE;
            for(int i=1;i<=size;i++){
                TreeNode curr = q.poll();
                max=Math.max(max,curr.val);
                if(curr.left!=null){
                    q.add(curr.left);
                }
                if(curr.right!=null){
                    q.add(curr.right);
                }
            }
            l.add(max);
        }
        return l;
    }
}
